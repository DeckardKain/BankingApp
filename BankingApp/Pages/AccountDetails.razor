@page "/accounts/{accountId}"
@inject IDataService DataService

<h3>AccountDetails</h3>

@if (Transactions != null)
{
    <div class="table-responsive table-dark">
        <table class="table table-striped table-bordered" style="width:50%;">
            <thead class="thead-dark">
                <tr>
                    <th>Date</th>
                    <th>Merchant Info</th>
                    <th>Type</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Transaction transaction in Transactions)
                {
                    <tr>
                        <td>@transaction.dateTime.ToShortDateString()</td>
                        <td>@transaction.merchantInfo</td>
                        <td>@transaction.transactionType.ToString()</td>
                        <td>@string.Format("{0:C}", transaction.amount)</td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
}

@code {
    [Parameter]
    public string? AccountId { get; set; }

    private List<Transaction> Transactions = new List<Transaction>();

    protected override void OnInitialized()
    {
        
    }

}
